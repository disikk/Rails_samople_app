<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(@user, class: '123123') do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name, 'Имя:' %>
        <%= f.text_field :name %>

        <%= f.label :email, 'Адрел эл. почты:' %>
        <%= f.text_field :email %>

        <%= f.label :password, 'Пароль:' %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Подтвердите пароль:" %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Register me", class: "btn btn-large btn-success" %>
    <% end %>
  </div>
</div>